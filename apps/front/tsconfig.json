{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "es6",
    "lib": ["dom", "es2019"],
    "module": "esnext",
    "jsx": "react-jsx", // Support JSX avec TypeScript
    "strict": true, // Active le mode strict
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vite/client"] // Inclut les types pour Vite
  },
  "include": ["src/**/*",  "vite-env.d.ts"], // Dossier à inclure dans la compilation
  "exclude": ["node_modules"] // Fichiers à exclure
}
